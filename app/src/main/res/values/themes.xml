<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.Theme.PhotoEditor" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.PhotoEditor" parent="Base.Theme.PhotoEditor">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="LockscreenTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowShowWallpaper">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="AdsIcon">
        <item name="android:textSize">11.0sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:backgroundTint">#000000</item>
        <item name="android:background">@drawable/bg_round_5</item>
        <item name="android:minWidth">15dp</item>
        <item name="android:minHeight">15dp</item>
        <item name="android:text">Ad</item>
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">18dp</item>
        <item name="android:paddingLeft">1dip</item>
        <item name="android:paddingRight">2dip</item>
        <item name="android:paddingBottom">1dip</item>
    </style>

    <style name="RoundedCorner5">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">5dp</item>
    </style>

    <style name="RoundedCorner10">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="RoundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
    </style>
</resources>